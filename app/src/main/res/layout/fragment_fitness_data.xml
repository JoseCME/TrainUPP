<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Fitness"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de experiencia"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgExperienceLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbBeginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principiante" />

            <RadioButton
                android:id="@+id/rbIntermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermedio" />

            <RadioButton
                android:id="@+id/rbAdvanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanzado" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objetivo principal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgFitnessGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbLoseWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perder peso" />

            <RadioButton
                android:id="@+id/rbGainMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganar músculo" />

            <RadioButton
                android:id="@+id/rbMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento" />

            <RadioButton
                android:id="@+id/rbStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuerza" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días disponibles por semana"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="6"
            android:progress="2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDaysValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 días"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary" />

    </LinearLayout>

</ScrollView>
