<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/chat_background"
    android:minHeight="350dp"
    android:maxHeight="700dp">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        android:elevation="4dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivAvatarIA"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icono_ia"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:contentDescription="Avatar IA" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivAvatarIA"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach IA"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatusIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En línea"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:alpha="0.8" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCerrarChat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white"
            android:contentDescription="Cerrar chat" />

    </RelativeLayout>

    <!-- INDICADOR DE ESCRITURA -->
    <LinearLayout
        android:id="@+id/layoutTypingIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@color/typing_indicator_bg">

        <ProgressBar
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            style="@android:style/Widget.ProgressBar.Small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach IA está escribiendo..."
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- AREA DE MENSAJES CON ALTURA ADAPTABLE -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMensajes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dp"
        android:maxHeight="400dp"
        android:background="@color/chat_background"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:scrollbars="vertical" />

    <!-- EMPTY STATE -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dp"
        android:maxHeight="400dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icono_ia"
            android:alpha="0.5"
            android:contentDescription="Avatar IA" />

        <TextView
            android:id="@+id/tvMensajeBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="¡Hola! Soy tu coach personal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Pregúntame sobre ejercicios, técnicas o cómo mejorar tu entrenamiento"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- AREA DE INPUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pregúntame sobre ejercicios..."
            android:background="@drawable/edittext_chat_background"
            android:padding="10dp"
            android:maxLines="3"
            android:inputType="textMultiLine|textCapSentences"
            android:imeOptions="actionSend"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btnEnviar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_send_background"
            android:src="@drawable/ic_send"
            android:tint="@android:color/white"
            android:contentDescription="Enviar mensaje" />

    </LinearLayout>

</LinearLayout>
