<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header del ejercicio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Imagen del ejercicio -->
            <ImageView
                android:id="@+id/imageViewEjercicio"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner_background"
                android:src="@drawable/ic_exercise_placeholder" />

            <!-- Información del ejercicio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewNombreEjercicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del ejercicio"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/textViewMusculos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Músculos trabajados"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Header de series (títulos de columnas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Serie"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anterior"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Peso (lbs)"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reps"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="✓"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Container para las series -->
        <LinearLayout
            android:id="@+id/layoutSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- NUEVO: Recuadro para eliminar serie -->
        <include
            android:id="@+id/layoutEliminarSerie"
            layout="@layout/eliminar_serie_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Botón para agregar serie -->
        <Button
            android:id="@+id/buttonAgregarSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar serie +"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
