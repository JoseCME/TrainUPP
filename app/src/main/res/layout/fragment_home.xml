<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Listo para entrenar?"
        android:textSize="18sp"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewRoutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva Rutina"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        style="@style/Widget.Material3.Button.UnelevatedButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explora nuestra biblioteca de ejercicios y crea rutinas personalizadas basadas en tu equipamiento disponible."
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
