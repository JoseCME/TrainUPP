<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferencias"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Te gustaría que creemos rutinas personalizadas usando Inteligencia Artificial?"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La IA puede ayudarte a crear rutinas más efectivas basadas en tus datos y objetivos."
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <RadioGroup
        android:id="@+id/rgAiPreference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbAiYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí, usar IA"
            android:layout_marginEnd="16dp"
            android:checked="true"
            android:buttonTint="@color/primary"
            android:textColor="@color/option_text_selector"
            android:background="@drawable/option_bg_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <RadioButton
            android:id="@+id/rbAiNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No, gracias"
            android:buttonTint="@color/primary"
            android:textColor="@color/option_text_selector"
            android:background="@drawable/option_bg_selector"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

    </RadioGroup>

</LinearLayout>
