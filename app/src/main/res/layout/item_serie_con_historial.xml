<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="4dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp"
    android:background="@drawable/serie_historial_background">

    <!-- Número de serie -->
    <TextView
        android:id="@+id/textViewNumeroSerie"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?android:attr/textColorPrimary" />

    <!-- Columna de datos históricos (no editables) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewPesoHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 lbs"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="?android:attr/textColorSecondary"
            android:background="@drawable/historial_reference_background"
            android:padding="2dp" />

        <TextView
            android:id="@+id/textViewRepsHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 reps"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:textColor="?android:attr/textColorSecondary"
            android:background="@drawable/historial_reference_background"
            android:padding="2dp" />

    </LinearLayout>

    <!-- Input para peso actual -->
    <EditText
        android:id="@+id/editTextPeso"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:hint="Peso"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:background="@drawable/edit_text_background" />

    <!-- Input para repeticiones actuales -->
    <EditText
        android:id="@+id/editTextRepeticiones"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:hint="Reps"
        android:inputType="number"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:background="@drawable/edit_text_background" />

    <!-- Checkbox para completado -->
    <CheckBox
        android:id="@+id/checkBoxCompletada"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:gravity="center" />

</LinearLayout>
