<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Número de serie -->
    <TextView
        android:id="@+id/textViewNumeroSerie"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?attr/colorPrimary" />

    <!-- Contenedor para Peso -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso (lbs)"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

        <EditText
            android:id="@+id/editTextPeso"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="0.0"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/edittext_background"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Contenedor para Repeticiones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

        <EditText
            android:id="@+id/editTextRepeticiones"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/edittext_background"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Checkbox completada con etiqueta -->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/checkBoxCompletada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>
